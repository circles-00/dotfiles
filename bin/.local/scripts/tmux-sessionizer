#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
  selected=$(
    {
      # dotfiles itself only (no subdirs)
      find ~/CodingProjects/personal/dotfiles -maxdepth 0 -type d 2>/dev/null
      # all other personal dirs with default depths
      find ~/CodingProjects/personal \
        -mindepth 1 -maxdepth 2 -type d \
        ! -path "$HOME/CodingProjects/personal/dotfiles*" 2>/dev/null
      # the other roots with default depths
      find ~/CodingProjects/work ~/CodingProjects/contribution-oss ~/CodingProjects/collaborative \
        -mindepth 1 -maxdepth 2 -type d 2>/dev/null
      } | fzf
    )
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
